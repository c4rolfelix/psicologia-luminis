@model Luminis.Models.ViewModels.PsicologoRegisterViewModel

@{
    ViewData["Title"] = "Cadastro de Psicólogo - Luminis";
}

<h2>Cadastro de Psicólogo</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form id="registerForm" asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CRP" class="control-label"></label>
                <input asp-for="CRP" class="form-control" />
                <span asp-validation-for="CRP" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmarSenha" class="control-label"></label>
                <input asp-for="ConfirmarSenha" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="WhatsApp" class="control-label"></label>
                <input asp-for="WhatsApp" class="form-control" />
                <span asp-validation-for="WhatsApp" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="button" class="btn btn-primary" id="btnRegister">Cadastrar</button>
            </div>
        </form>

        <div class="mt-3">
            <p>Já possui conta? <a asp-controller="Account" asp-action="Login">Faça seu login aqui</a>.</p>
        </div>
    </div>
</div>

<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termsModalLabel">Termos de Uso e Política de Privacidade do Luminis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="termsContent">
                    <p>Carregando termos...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success" id="btnAcceptTerms" disabled>Concordo e Continuar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            var $registerForm = $('#registerForm');
            var validator = $registerForm.validate(); 


                $.get('@Url.Action("Terms", "Home")', function (data) {
                    $('#termsContent').html(data);
                    setTimeout(function() {
                        $('#btnAcceptTerms').prop('disabled', false);
                    }, 2000); // 2 segundos para leitura
                });
                $('#termsModal').modal('show');
            }

            $('#btnAcceptTerms').on('click', function () {
                $('#termsModal').modal('hide');


                setTimeout(function() {
                    $registerForm.submit(); 
                }, 100); // Pequeno atraso para garantir que o modal fechou.
            });

            $('#btnRegister').on('click', function (e) {
                if ($registerForm.valid()) {
                    openTermsModal();
                } else {

                }
            });
        });
    </script>
}