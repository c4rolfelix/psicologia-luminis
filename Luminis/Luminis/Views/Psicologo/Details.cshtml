@model Luminis.Models.Psicologo 
@{
    ViewData["Title"] = $"Perfil de {Model?.Nome} {Model?.Sobrenome}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model?.FotoUrl) ? "/images/default-avatar.png" : Model?.FotoUrl)"
                 class="img-fluid rounded-circle mb-3 profile-detail-avatar" alt="Foto de @Model?.Nome"
                 onerror="this.onerror=null;this.src='/images/default-avatar.png';" />
            <h3>@Model?.Nome @Model?.Sobrenome</h3>
            <p class="text-muted">CRP: @Model?.CRP</p>
            <a href="https://wa.me/@Model?.WhatsApp" target="_blank" class="btn btn-success btn-lg mb-3">
                <i class="bi bi-whatsapp"></i> Agendar via WhatsApp
            </a>
        </div>
        <div class="col-md-8">
            <h4>Sobre Mim</h4>
            <p>
                @(string.IsNullOrEmpty(Model?.Biografia) ? "O psicólogo ainda não adicionou uma biografia." : Model?.Biografia)
            </p>

            <h4>Especialidades</h4>
            @if (Model?.Especialidades != null && Model.Especialidades.Any())
            {
                <ul class="list-group mb-3">
                    @foreach (var especialidade in Model.Especialidades)
                    {
                        <li class="list-group-item">@especialidade.Nome</li>
                    }
                </ul>
            }
            else
            {
                <p>Este psicólogo ainda não listou suas especialidades.</p>
            }

            <div class="mt-4">
                <a asp-controller="Psicologo" asp-action="Index" class="btn btn-outline-secondary">Voltar para a lista de psicólogos</a>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-detail-avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 3px solid #007bff; 
    }
</style>